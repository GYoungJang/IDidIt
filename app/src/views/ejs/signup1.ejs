<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
    <title>회원가입</title>
  </head>
  <body>
    <script>
      function signup() {
        let form = document.getElementById('form_signup');
        if (!form.checkValidity()) {
          form.reportValidity();
          console.log('reportValidity');

          return false;
        }

        let user = {
          id: form.id.value,
          password: form.password.value,
          name: form.name.value,
          email: form.email.value,
          gender: $("input[type=radio][name='gender']:checked").val(),
          nickname: form.nickname.value,
          phone_number: form.phone_number.value,
        };
        axios({
          method: 'post',
          url: 'http://localhost:8000/signup',
          data: user,
        });

        alert('회원가입 성공');
        document.location.href = 'http://localhost:8000/login';
      }
    </script>
    <div>
      <form id="form_signup">
        아이디: <input type="text" id="id" name="id" required /><br /><br />
        패스워드:
        <input type="password" id="pw" name="password" required /><br /><br />
        이메일:
        <input type="text" id="email" name="email" required /><br /><br />
        이름 : <input type="text" name="name" /><br />
        성별: <input type="radio" name="gender" value="male" required />Male
        <input
          type="radio"
          name="gender"
          value="female"
          required
        />Female<br /><br />
        전화번호: <input type="text" name="phone_number" required /><br />
        닉네임:
        <input type="text" id="nickname" name="nickname" required /><br /><br />
        <button type="button" onclick="signup();">signup</button>
      </form>
    </div>
  </body>
</html>
