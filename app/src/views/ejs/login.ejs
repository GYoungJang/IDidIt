<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0 " />
    <title>Document</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css"
    />
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"
    />
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"
    ></script>

    <!-- css파일 -->
    <link rel="stylesheet" href="/css/login.css" />
    <!-- js파일 -->
    <script src="/src/"></script>
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Jua&display=swap");
    </style>
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <form id="form_login" action="/login" method="post">
      <nav class="navbar">
        <div class="navbar_logo">
          <a href="#">내가해냄</a>
        </div>

        <ul class="navbar_menu">
          <li><a href="#">로그인</a></li>
          <li><a href="#">회원가입</a></li>
        </ul>
      </nav>

      <section class="login_master">
        <div class="grid-container">
          <!-- 최상위-->
          <div class="grid-item">
            <div class="login_btn1">
              <!-- 로그인페이지 로그인버튼-->
              <button
                type="button"
                onmouseenter="changeImg( null );"
                onclick="sendGet()"
                data-text="로그인"
              ></button>
              <img alt="" class="image-daily1" src="/img/login_img_grey.png" />
              <!-- <img  alt="" class="image-daily2" src="../static/login_img_pink.png"> -->
            </div>
          </div>

          <div class="grid-item">
            <div class="login_main">
              <div class="login_letter">
                <!-- 로그인페이지 글귀메인-->
                <p>'내가해냄'에 오신걸 환영합니다!</p>
              </div>
            </div>
            <div class="input_id1">
              <!-- 로그인페이지 ID 입력창-->
              <div class="input_id2">
                <p>아이디</p>
                <input
                  type="text"
                  name="id"
                  placeholder="아이디를 입력하세요"
                />
              </div>
            </div>
            <div class="inputcss">
              <!-- 로그인페이지 PW 입력창-->
              <div class="input_pw2">
                <p>비밀번호</p>
              </div>
              <div class="input_pw2">
                <input
                  type="password"
                  name="password"
                  placeholder="비밀번호를 입력하세요"
                />
              </div>
              <div class="input_pw2">
                <p id="form_info"></p>
              </div>
            </div>
            <ul class="find_txt">
              <a href="#">비밀번호 찾기 </a
              >｜
              <a href="#">아이디 찾기</a
              >｜
              <a href="#">회원가입</a>
            </ul>
          </div>
        </div>
      </section>
    </form>

    <script>
      function sendGet() {
        var form = document.getElementById("form_login");

        axios({
          method: "post",
          url: "http://localhost:8000/receive",
          data: {
            name: form.id.value,
            pw: form.password.value,
          },
        })
          .then((a) => {
            return a.data;
          })
          .then((d) => {
            if (d) {
              $("#form_info").text("로그인 성공").css("color", "blue");
            } else {
              $("#form_info").text("로그인 실패").css("color", "red");
            }
          });
      }

      $(document).ready(function () {
        $(".image-daily1").hover((obj) => {
          changeImg(obj.target);
        });
      });
      function changeImg(target, enter) {
        if (target == null) target = ".image-daily1";
        $(target).attr("src", "/img/login_img_pink.png");
      }
    </script>
  </body>
</html>
