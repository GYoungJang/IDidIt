    <script>
      function sendGet() {
        var form = document.getElementById("form_login");

        // 근영님 작성 axios 코드
        axios({
          method: "post",
          url: "http://localhost:8000/login",
          data: {
            id: form.id.value,
            password: form.password.value,
          },
        })
          .then((rep) => {
            return rep.data;
          })
          .then((data) => {
            if (data) {
              alert("로그인 성공");
              form.submit();
              //document.location.href = 'http://localhost:8080/userInfo';
            } else {
              alert("로그인 실패");
              form.reset();
            }
